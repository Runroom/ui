{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "babel-loader": "^8.1.0",
    "glob": "^7.1.6",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "@runroom/purejs": "^3.1.0",
    "copyfiles": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "nodemon": "^2.0.3",
    "sass": "1.26.6",
    "twing": "^4.0.3"
  },
  "scripts": {
    "clean:compiled": "rm -rf ui/components/**/*.min.js ui/components/**/*.css api/public/images",
    "sass:build": "sass ui/components:ui/components --no-source-map --style=compressed",
    "js:build": "webpack --config webpack.config.js",
    "assets:build": "copyfiles -f ui/components/*/*.jpg api/public/images",
    "build": "yarn sass:build && yarn js:build && yarn assets:build",
    "start": "node server",
    "server": "nodemon server"
  },
  "resolutions": {
    "minimist": "1.2.5"
  }
}
