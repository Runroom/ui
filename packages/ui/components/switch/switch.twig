{% set class = component.class|default('switch') %}
{% set labelAfter = component.labelAfter|default('') %}
{% set labelBefore = component.labelBefore|default('') %}
{% set labelClass = component.labelClass|default('') %}
{% set spanClass = component.spanClass|default('') %}

<div class="{{ class }}">
    {% if labelBefore %}
        <span>{{ labelBefore }}</span>
    {% endif %}
        <label class="{{ labelClass }}">
            <input type="checkbox" {{ attributes }}>
            <span class="{{ spanClass }}"></span>
        </label>
    {% if labelAfter %}
        <span>{{ labelAfter }}</span>
    {% endif %}
</div>
