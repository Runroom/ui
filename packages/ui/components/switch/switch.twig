{% set class = component.class|default('') %}
{% set preText = component.preText|default('') %}
{% set postText = component.postText|default('') %}
{% set name = component.name|default('') %}
{% set value = component.value|default('') %}
{% set attributes = component.attributes|default('') %}

<div class="switch {{ class }}">
    {% if preText %}
        <span class="switch__preText">{{ preText }}</span>
    {% endif %}
    <label class="switch__label">
        <input type="checkbox" name="{{ name }}" value="{{ value }}" {{ attributes|raw }}>
        <span class="switch__slide"></span>
    </label>
    {% if postText %}
        <span class="switch__postText">{{ postText }}</span>
    {% endif %}
</div>
