{% set preText = component.preText|default('') %}
{% set postText = component.postText|default('') %}
{% set labelClass = component.labelClass|default('switch__label') %}
{% set spanClass = component.spanClass|default('switch__slide switch__round') %}
{% set attributes = component.attributes|default('') %}

<div class="switch">
    {% if preText %}
        <span>{{ preText }}</span>
    {% endif %}
    <label class="{{ labelClass }}">
        <input type="checkbox" {{ attributes }}>
        <span class="{{ spanClass }}"></span>
    </label>
    {% if postText %}
        <span>{{ postText }}</span>
    {% endif %}
</div>
