{% set links = component.links|default([]) %}
{% set class = component.class|default('') %}
{% set title = component.title|default('navegaciÃ³n') %}

{% if links|length > 0 %}
    <section>
        <div class="skip-links {{ class }}">
            <h2 class="skip-links__title" id="skip-links-list">{{ title }}</h2>
            <ul aria-labelledby="skip-links-list">
                {% for link in links %}
                    <li>
                        <a class="skip-links__link" href="{{ link.anchor }}">{{ link.text }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </section>
{% endif %}