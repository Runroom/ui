{% set attr = component.attr|default('') %}
{% set blank = component.blank|default(false) %}
{% set class = component.class|default('') %}
{% set content = component.content|default('') %}
{% set label = component.label|default('') %}
{% set nofollow = component.nofollow|default(false) %}
{% set url = component.url|default('') %}
{% set rel = rel|default(false) %}

{% if blank or nofollow %}
    {% set rel = (blank ? 'noreferrer noopener ' : '') ~ (nofollow ? 'nofollow' : '') %}
{% endif %}

{% if url %}
    <a
        href="{{ url }}"
        class="link {{ class }}"
        {% if blank %}target="_blank"{% endif %}
        {% if rel %}rel="{{ rel }}"{% endif %}
        {% if label %}aria-label="{{ label }}"{% endif %}
        {{ attr|raw }}
    >
            {{ content|raw }}
    </a>
{% endif %}
