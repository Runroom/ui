{% set title = component.title|default('') %}
{% set content = component.content|default('') %}
{% set id = component.id|default('toggle') %}

{% if title and content %}
    <div class="toggle">
        <button class="toggle__trigger js-toggle" aria-controls="{{ id }}" aria-expanded="false">{{ title|raw }}</button>
        {% if content %}
            <div id="{{ id }}" class="toggle__content" hidden>{{ content|raw }}</div>
        {% endif %}
    </div>
{% endif %}
