{% set links = component.links|default([]) %}
{% set class = component.class|default('') %}
{% set title = component.title|default('Enlaces para saltar dentro del contenido') %}

{% if links|length > 0 %}
    <nav class="skip-links {{ class }}">
        <ul aria-label="{{ title }}">
            {% for link in links %}
                <li>
                    <a class="skip-links__link" href="{{ link.anchor }}">{{ link.text }}</a>
                </li>
            {% endfor %}
        </ul>
    </nav>
{% endif %}
