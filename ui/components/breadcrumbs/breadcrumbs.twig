{% set breadcrumbs = component.breadcrumbs|default([]) %}
{% set ariaLabel = component.ariaLabel|default('Breadcrumb') %}
{% set class = component.class|default('') %}

{% if breadcrumbs|length > 0 %}
    <nav class="breadcrumbs {{ class }}" aria-label="{{ ariaLabel }}">
        <ol>
            {% for breadcrumb in breadcrumbs %}
                {% if breadcrumb.url and breadcrumb.label %}
                    <li class="breadcrumbs__item">
                        <a href="{{ breadcrumb.url }}" {% if loop.last %}aria-current="page"{% endif %}>{{ breadcrumb.label }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ol>
    </nav>
{% endif %}